.container {
    &.opened {
        display: block;
    }

    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    z-index: 1000;

    max-height: 400px;
    overflow: auto;

    padding: 8px 0;
    margin: 0;

    outline: none;
    border: 1px solid #bbbbbb;
    border-radius: 0;
    -webkit-box-shadow: 0 2px 6px rgba(0, 0, 0, .2);
    box-shadow: 0 2px 6px rgba(0, 0, 0, .2);

    background-color: #fff;
    background-clip: padding-box;
}
